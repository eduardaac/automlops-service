# ============================================
# AutoMLOps - Environment Variables Template
# ============================================
# INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace all placeholder values with your actual configuration
# 3. NEVER commit .env to git!

# ============================================
# API Configuration
# ============================================
IP="127.0.0.1"
PORT="8000"
HOST="0.0.0.0"

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection for main database
DATABASE_URL="postgresql://automlops_user:YOUR_SECURE_PASSWORD@127.0.0.1:5432/automlops_db"
POSTGRES_HOST="127.0.0.1"
POSTGRES_PORT="5432"
POSTGRES_DB="automlops_db"
POSTGRES_USER="automlops_user"
POSTGRES_PASSWORD="YOUR_SECURE_PASSWORD"

# Metrics database (optional)
METRICS_DB_PASSWORD="YOUR_METRICS_PASSWORD"

# ============================================
# MLflow Tracking
# ============================================
MLFLOW_TRACKING_URI="http://127.0.0.1:5000"

# ============================================
# Monitoring Services
# ============================================
# Grafana
GRAFANA_ADMIN_USER="admin"
GRAFANA_ADMIN_PASSWORD="YOUR_GRAFANA_PASSWORD"

# Prometheus
PROMETHEUS_PORT="9090"

# ============================================
# Kafka (Optional - Streaming)
# ============================================
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_TOPIC_PREDICTIONS="ml-predictions"
KAFKA_TOPIC_ALERTS="ml-alerts"

# ============================================
# Security (Production Only)
# ============================================
# Uncomment and configure for production deployment:
# SECRET_KEY="generate-a-secure-random-key-min-32-chars"
# API_KEY="your-api-authentication-key"
# ALLOWED_ORIGINS="https://yourdomain.com,https://api.yourdomain.com"

# ============================================
# Email Alerts (Optional)
# ============================================
# SMTP_SERVER="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-specific-password"
# ALERT_EMAIL_TO="alerts@yourdomain.com"

# ============================================
# Cloud Storage (Optional)
# ============================================
# AWS S3
# AWS_ACCESS_KEY_ID="your-access-key-id"
# AWS_SECRET_ACCESS_KEY="your-secret-access-key"
# AWS_BUCKET_NAME="automlops-models"
# AWS_REGION="us-east-1"

# Azure Blob Storage
# AZURE_STORAGE_CONNECTION_STRING="your-connection-string"
# AZURE_CONTAINER_NAME="automlops-models"

# ============================================
# Feature Flags
# ============================================
ENABLE_MONITORING="true"
ENABLE_ALERTS="true"
ENABLE_DRIFT_DETECTION="true"
DEBUG_MODE="false"

# ============================================
# Logging
# ============================================
LOG_LEVEL="INFO"
# LOG_FILE_PATH="logs/automlops.log"